pipeline{
    agent any
    stages{
        stage("Build"){
            steps{
                sh 'npm install && npm run-script build && npm run-script test'
            }
            post{
                always{
                    junit 'tests-results/*.xml'
                }
                success{
                    archiveArtifacts 'public/**/*'
                }
            }
        }
        stage("Deploy"){
            steps{
                echo "========executing A========"
            }
            post{
                always{
                    echo "========always========"
                }
                success{
                    echo "========A executed successfully========"
                }
                failure{
                    echo "========A execution failed========"
                }
            }
        }
        stage("Test"){
            steps{
                echo "========executing A========"
            }
            post{
                always{
                    echo "========always========"
                }
                success{
                    echo "========A executed successfully========"
                }
                failure{
                    echo "========A execution failed========"
                }
            }
        }
    }
    post{
        always{
            echo "========always========"
        }
        success{
            echo "========pipeline executed successfully ========"
        }
        failure{
            echo "========pipeline execution failed========"
        }
    }
}